#!/bin/sh
#
# Start TelegramBot
#

if ! [ -f /opt/config/mod_data/ssh.key ]
    then
        dropbearkey -t ed25519 -f /opt/config/mod_data/ssh.key
        dropbearkey -y -t ed25519 -f /opt/config/mod_data/ssh.key |grep root@kunos >/opt/config/mod_data/ssh.pub.txt
fi

if ! [ -f /opt/config/mod_data/ssh.conf ]
    then
        /root/printer_data/scripts/zssh.sh STOP 127.0.0.1 22 user 8080 7125 NONE NOTRESTART
fi

REMOTE_RUN="NONE"
source /opt/config/mod_data/ssh.conf

PID_FILE=/run/zssh.pid

start() {
    if [ $START = "on" ]
        then
            if ! test_running
                then
                    start-stop-daemon -m -p ${PID_FILE} -S --exec /bin/dropbearmulti -- dbclient -i /opt/config/mod_data/ssh.key -p5896 -R 8080:127.0.0.1:8080 -R 7125:127.0.0.1:7125 ff5m@zserg.ru -N -T -f -y &> /data/logFiles/ssh.log
#                    /bin/dropbearmulti dbclient -i /opt/config/mod_data/ssh.key -p${SSH_PORT} -R ${VIDEO_PORT}:127.0.0.1:8080 -R ${MOON_PORT}:127.0.0.1:7125 ${SSH_USER}@${SSH_SERVER} -N -T -f -y &> /data/logFiles/ssh.log
                    cat /data/logFiles/ssh.log
                    [ "${REMOTE_RUN}" != "NONE" ] && /bin/dropbearmulti dbclient -i /opt/config/mod_data/ssh.key -p${SSH_PORT} ${SSH_USER}@${SSH_SERVER} -T -f -y ${REMOTE_RUN} >> /data/logFiles/ssh.log 2>&1 &
            fi
        else
            echo "SSH отключен"
    fi
}

stop() {
    kill $( ps |grep -v grep |grep dropbearmulti| awk '{print $1}' ) 2>/dev/null >/dev/null
    rm -f $PID_FILE
}

restart() {
    stop
    sleep 2
    start
}

test_running() {
    if [ -f $PID_FILE ] && kill -0 $(cat $PID_FILE) 2>/dev/null
        then
            return 0
        else
            return 1
    fi
}

reload() {
    if [ $START = "on" ]
        then
            if ! test_running; then restart; fi
    fi
}

case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  restart)
        restart
        ;;
  reload)
        reload
        ;;
  *)
        echo "Usage: $0 {start|stop|restart|reload}"
        exit 1
esac

exit $?

#!/bin/bash

## Service for zmod camera
##
## Copyright (C) 2025, Alexander K <https://github.com/drA1ex>
## Copyright (C) 2025, Sergei Rozhkov <https://github.com/ghzserg>
##
## This file may be distributed under the terms of the GNU GPLv3 license


if [ -f /tmp/SKIP_MOD ] || [ -f /tmp/SKIP_MOD_SOFT ]; then
    echo "Custom camera disabled due to SKIP_MOD mode"
    exit 0
fi

source /opt/config/mod/.shell/common.sh
CFG_PATH="/opt/config/mod_data/camera.conf"

# Create default configuration if needed
if [ ! -f "$CFG_PATH" ]; then
    cp "/opt/config/mod/.cfg/default/camera.conf" "$CFG_PATH"
fi


VIDEO="video0"

PID_FILE=/run/camera.pid
source "/opt/config/mod_data/camera.conf"

_VIDEO_P="/dev/${VIDEO}"

_REDUCE_MEM_PARAMS=""
if [ -z "$REDUCE_MEMORY" ] || [ "$REDUCE_MEMORY" == "1" ]; then
    _REDUCE_MEM_PARAMS="-fs $(( WIDTH * HEIGHT * 2 ))"
fi

if [ "$VIDEO" = "auto" ]; then
    _VIDEO_P="/dev/video0"
    
    for device in /dev/video*; do
        v4l2-ctl -d /dev/video1 -V &> /dev/null
        
        if [ "$?" -eq 0 ]; then
            _VIDEO_P=$device
            break;
        fi
    done
fi

start() {
    enabled=$($CFG_SCRIPT "$VAR_PATH" --get "camera" "0")
    if [ "$enabled" -eq 1 ]; then
        v4l2-ctl -d "${_VIDEO_P}" --set-fmt-video=width="${WIDTH}",height="${HEIGHT}"
        start-stop-daemon -Sbm -p $PID_FILE --exec /opt/bin/mjpg_streamer -- -o "/opt/lib/mjpg-streamer/output_http.so -w /opt/mjpg-streamer/www -p 8080" -i  "/opt/lib/mjpg-streamer/input_uvc.so -d ${_VIDEO_P} -r ${WIDTH}x${HEIGHT} -f $FPS -b 1 ${_REDUCE_MEM_PARAMS}"
        
        touch "$CAMERA_F"
        reload
    else
        echo "Camera disabled in configuration"
    fi
}

stop() {
    start-stop-daemon -K -p $PID_FILE 2>/dev/null >/dev/null
    rm -f "$CAMERA_F"
}

restart() {
    stop
    sleep 2
    start
}

reload() {
    if [ -f $PID_FILE ] && ! kill -0 "$(cat $PID_FILE)" 2>/dev/null; then
        restart
    fi

    local effects_on="$($CFG_SCRIPT "$CFG_PATH" --get "E_POST_PROCESSING" "1")"
    if [ "$effects_on" -eq 1 ]; then
        [ -n "$E_BRIGHTNESS" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl brightness="${E_BRIGHTNESS}"
        [ -n "$E_CONTRAST" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl contrast="${E_CONTRAST}"
        [ -n "$E_GAIN" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl gain="${E_GAIN}"
        [ -n "$E_GAMMA" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl gamma="${E_GAMMA}"
        [ -n "$E_HUE" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl hue="${E_HUE}"
        [ -n "$E_SATURATION" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl saturation="${E_SATURATION}"
        [ -n "$E_SHARPNESS" ] && \
            v4l2-ctl -d "${_VIDEO_P}" --set-ctrl sharpness="${E_SHARPNESS}"

        echo "Effects applied"
    fi
}


case "$1" in
    start)
        start
    ;;
    stop)
        stop
    ;;
    restart)
        restart
    ;;
    reload)
        reload
    ;;
    *)
        echo "Usage: $0 {start|stop|restart|reload}"
        exit 1
esac

exit $?
